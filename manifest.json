{
  "manifest_version": 2,

  "name": "Кириллицаны Latynshaǵa audaru",
  "description": "Кириллицаны латыншаға аударатын Chrom қосымшасы",
  "version": "1.1.5",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
          "storage",
          "notifications",
          "contextMenus",
          "activeTab"
        ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "options_page": "options.html"
}